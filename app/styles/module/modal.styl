.m-modal {
    z-index: 0;
    opacity: 0;
    transition-duration: 250ms;
    position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;

    .u-logo {
        position: absolute;
        padding: 10px;
        height: 160px;

        @media $medium {
            display: none;
        }
    }

    &.is-active {
        opacity: 1;
        animation: z-index 1s 1 forwards;
    }

    &__card {
        display: flex;
        flex-direction: column-reverse;
        justify-content: flex-end;
        width: 100%;
        height: 100%;

        @media $medium {
            display: block;
        }
    }

    &__overlay {
    	background: rgba(0, 0, 0, 0.3);
    }

    &__wrapper {
    	display: flex;
    	flex-direction: column;
        padding-top: 160px;
    	align-items: center;
        width: 100%;
        height: 100%;

        @media $medium {
            padding-top: 80px;
            justify-content: center;
        }
    }

    &__container {
        position: relative;
        overflow: auto;
        padding: 60px;
        background: white;
        width: 100%;
        height: 100%;

        h1:nth-child(1) {
            margin-top: 10px;
        }

        h1 {
            margin: 20px 0 25px 0;
        }

        a {
            color: black;
        }

        @media $medium {
            padding: 30px 40px;
            height: 90%;
            width: 80%;
        }

        @media $xl {
            padding: 40px 60px;
        }
    }

    &__overlay {
        position: absolute;
    	top: 0;
    	left: 0;
    	width: 100%;
    	height: 100%;
    }
}

@keyframes z-index {
    0%   { z-index: 20; }
    100% { z-index: 1000; }
}
